{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "target": "esnext",
    "strict": true,
    "outDir": "./dist",
    "types": [
      "node",
      "convict",
      "jest"
    ]
  },
  "include": [
    "lib/**/*.ts",
    "test/simple/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/lib",
    "dist/test"
  ]
}
